{
  "root": {
    "src": "./public",
    "dest": "./assets"
  },
  "tasks": {
    "browserSync": {
      "proxy": "http://localhost:8080/"
    },
    "js": {
      "src": "scripts/entries",
      "dest": "js/entries",
      "extractSharedJs": true,
      "extensions": [
        "js",
        "coffee",
        "vue"
      ]
    },
    "jsCopy": {
      "src": "scripts/lib",
      "dest": "js/lib",
      "extensions": [
        "js"
      ]
    },
    "css": {
      "src": "css",
      "dest": "css",
      "autoprefixer": {
        "browsers": [
          "last 3 version"
        ]
      },
      "extensions": [
        "css"
      ]
    },
    "images": {
      "src": "images",
      "dest": "images",
      "extensions": [
        "jpg",
        "png",
        "svg",
        "gif"
      ]
    },
    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": [
        "woff2",
        "woff",
        "eot",
        "ttf",
        "svg"
      ]
    }
  }
}
